generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model City {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  weatherId   String
  name        String
  temp        Int
  description String
  icon        String?
  favorite    Boolean @default(false)
}
